{
  "manifest_version": 3,
  "name": "抖音视频链接导出工具",
  "version": "1.0",
  "description": "获取抖音博主所有视频链接并导出",
  "permissions": [
    "activeTab", 
    "scripting", 
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "*://*.douyin.com/*",
    "*://*.douyin.wtf/*",
    "*://*.iesdouyin.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.douyin.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
} 